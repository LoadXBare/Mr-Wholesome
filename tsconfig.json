{
	"compileOnSave": true,
	"compilerOptions": {
		"importHelpers": true,
		"incremental": true,
		"lib": [
			"ESNext",
			"DOM"
		],
		"module": "ESNext",
		"moduleResolution": "nodenext",
		"newLine": "lf",
		"noEmitHelpers": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"preserveConstEnums": true,
		"pretty": true,
		"removeComments": true,
		"resolveJsonModule": true,
		"strict": true,
		"target": "ESNext",
		"useDefineForClassFields": true,
		"rootDir": "src",
		"outDir": "dist"
	},
	"ts-node": {
		"esm": true
	}
}